<h2>Edit Plant</h2>

<form action="/plants/<%= @plant["id"] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @plant.name %>" placeholder="plant name" required autofocus>
  <label>Family:</label>
  <input type="url" name="image" value="<%= @plant.image %>" placeholder="http://...">
  <button>Update</button>
</form>
