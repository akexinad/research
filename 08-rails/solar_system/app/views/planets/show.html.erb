<h1><%= @planet.name %></h1>

<%= image_tag @planet.image, :class => 'feature' if @planet.image.present? %>

<ul>
  <li>Name: <%= @planet.name %></li>
  <li>Orbit: <%= @planet.orbit %></li>
  <li>Diameter: <%= @planet.diameter %></li>
  <li>Mass: <%= @planet.mass %></li>
  <li>Moons: <%= @planet.moons %></li>
</ul>

<div class="controls">
  <!-- LINKS TAKE YOU TO SOMEWHERE. -->
  <%= link_to 'Edit Planet', planet_edit_path(@planet.id) %>
  <!-- BUTTONS DO SOMETHING. THEREFOR DELETE SHOULD BE A BUTTON-->
  <%= button_to 'Delete Planet', planet_path(@planet.id), :method => "delete", :data => {:confirm => 'Are you sure?'} %>
</div>
