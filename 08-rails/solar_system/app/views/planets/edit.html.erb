<h1>Edit Planet</h1>

<form action="<%= planet_path(@planet.id) %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @planet.name %>" required autofocus>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @planet.image %>" autofocus>
  <label>Orbit:</label>
  <input type="number" name="orbit" value="<%= @planet.orbit %>" autofocus>
  <label>Diameter:</label>
  <input type="number" name="diameter" value="<%= @planet.diameter %>" autofocus>
  <label>Mass:</label>
  <input type="number" name="mass" value="<%= @planet.mass %>" autofocus>
  <label>Moons:</label>
  <input type="number" name="moons" value="<%= @planet.moons %>" autofocus>

  <button>Edit Planet</button>
</form>
